<div class="banner mt-30" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(https://www.fjordsandbeaches.com/wp-content/uploads/2018/10/alcohol-bar-party-cocktail.jpg);background-attachment: fixed;background-position-y: center;">
  <div class="container">
    <h1 class="main-text-banner"></h1>
    <p></p>
  </div>
</div>
<div class="show-container d-flex col-lg-11 col-11">
    <div class="show-image col-lg-3"></div>
    <div class="show-content col-lg-9">
        <h3><%= @cocktail.name.capitalize %></h3>
        <% @cocktail.doses.each do |dose|%>
            <p><%= "#{dose.description} - #{dose.ingredient.name}" %></p>
        <% end %>
    </div>
</div>
<div class="show-suggested col-lg-11 col-11"></div>
